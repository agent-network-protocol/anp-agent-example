{
  "openrpc": "1.3.2",
  "info": {
    "title": "Test Agent External API",
    "version": "1.0.0",
    "description": "外部OpenRPC接口，提供测试智能体的基础服务和数据操作功能",
    "x-anp-protocol-type": "ANP",
    "x-anp-protocol-version": "1.0.0",
    "contact": {
      "name": "Test Agent Support",
      "email": "support@example.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "security": [
    {
      "didwba": []
    }
  ],
  "servers": [
    {
      "name": "Production Server",
      "url": "https://AGENT_DESCRIPTION_JSON_DOMAIN/agents/test/jsonrpc",
      "description": "测试智能体外部API生产服务器"
    }
  ],
  "methods": [
    {
      "name": "add",
      "summary": "加法运算",
      "description": "计算两个数字的和",
      "params": [
        {
          "name": "a",
          "description": "第一个数字",
          "required": true,
          "schema": {
            "type": "number",
            "description": "第一个加数"
          }
        },
        {
          "name": "b",
          "description": "第二个数字",
          "required": true,
          "schema": {
            "type": "number",
            "description": "第二个加数"
          }
        }
      ],
      "result": {
        "name": "addResult",
        "description": "加法运算结果",
        "schema": {
          "type": "object",
          "properties": {
            "result": {
              "type": "number",
              "description": "计算结果"
            }
          },
          "required": ["result"]
        }
      }
    },
    {
      "name": "greet",
      "summary": "问候",
      "description": "生成个性化问候语",
      "params": [
        {
          "name": "name",
          "description": "姓名",
          "required": true,
          "schema": {
            "type": "string",
            "description": "要问候的人的姓名"
          }
        }
      ],
      "result": {
        "name": "greetResult",
        "description": "问候结果",
        "schema": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string",
              "description": "问候消息"
            }
          },
          "required": ["message"]
        }
      }
    }
  ],
  "components": {
    "securitySchemes": {
      "didwba": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "DID-WBA",
        "description": "DID-WBA认证方案，用于智能体间的安全通信"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "integer",
                "description": "错误代码"
              },
              "message": {
                "type": "string",
                "description": "错误信息"
              },
              "data": {
                "type": "object",
                "description": "错误详细信息"
              }
            },
            "required": [
              "code",
              "message"
            ]
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "result": {
            "type": "object",
            "description": "成功响应结果"
          },
          "id": {
            "type": [
              "string",
              "number",
              "null"
            ],
            "description": "请求标识符"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "测试智能体API详细文档",
    "url": "https://docs.agent-connect.ai/test-agent"
  }
}