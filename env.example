# Example environment configuration for ANP Agent Example
# Copy this file to .env and update the values

# Required: Agent service domain
AGENT_DESCRIPTION_JSON_DOMAIN=agent-connect.ai

# JWT Authentication Configuration (defaults to docs/jwt_key/)
# Note: Paths are relative to the project root, not the src directory
JWT_PRIVATE_KEY_PATH=docs/jwt_key/RS256-private.pem
JWT_PUBLIC_KEY_PATH=docs/jwt_key/RS256-public.pem
JWT_ALGORITHM=RS256

# Token expiration settings (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60
AUTH_NONCE_EXPIRY_MINUTES=5
AUTH_TIMESTAMP_EXPIRY_MINUTES=5

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=*
